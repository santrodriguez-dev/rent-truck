// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  firstName   String
  lastName    String?
  address     String?
  phoneNumber String
  email       String    @unique
  role        String    @default("user") //admin, user, driver
  city        String
  Vehicle     Vehicle[]
  Rental      Rental[]
  createdAt   DateTime  @default(now())

  @@map("user")
}

model Vehicle {
  id           Int       @id @default(autoincrement())
  brand        String
  model        String?
  year         DateTime?
  plate        String    @unique
  size         String    @default("medium") // small, medium, large
  location     String?
  pricePerHour Int
  color        String?
  city         String
  available    Boolean
  Rental       Rental[]
  userOwner    User      @relation(fields: [userOwnerId], references: [id])
  userOwnerId  Int
  createdAt    DateTime  @default(now())

  @@map("vehicle")
}

model Rental {
  id        Int      @id @default(autoincrement())
  startDate DateTime
  endDate   DateTime
  numHours  Int
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  vehicleId Int
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("rental")
}
